<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:padding="10dp"
    >

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/ingredient_img"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        />
    <TextView
        android:id="@+id/ingredient_name_tv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/ingredient_img"
        app:layout_constraintBottom_toBottomOf="@id/ingredient_img"
        app:layout_constraintStart_toEndOf="@id/ingredient_img"
        app:layout_constraintWidth_percent=".5"
        android:layout_marginStart="10dp"
        tools:text="Minced Beef"
        />
    <TextView
        android:id="@+id/ingredient_measure_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/ingredient_img"
        app:layout_constraintBottom_toBottomOf="@id/ingredient_img"
        app:layout_constraintStart_toEndOf="@id/ingredient_name_tv"
        tools:text="2 tablespoons"
        />
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        app:layout_constraintTop_toBottomOf="@id/ingredient_img"
        android:background="#8BC34A"
        android:layout_marginTop="10dp"
        />


</androidx.constraintlayout.widget.ConstraintLayout>